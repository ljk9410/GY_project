            section
                div.second__message-container
                    div.second__message 경연인들의 더 나은 소통을 위한 웹사이트
                div.second__img(style=`background-image: url(/uploads/communication.png)`)
            section
                div.nav-container
                    div Contents
                    ul
                        li.nav-list.sa-left
                            figure.list-img(style=`background-image: url(/uploads/announcement.png)`)
                            span.list-title 공지사항
                        li.nav-list.sa-middle
                            figure.list-img(style=`background-image: url(/uploads/schedule.png)`)
                            span.list-title 스케쥴
                        li.nav-list.sa-right
                            figure.list-img(style=`background-image: url(/uploads/photo.png)`)
                            span.list-title 포토북
            section
                div
                    a(href="/calendar") 바로가기 &rarr;
