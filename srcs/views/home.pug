    body
        main
            section
                div.main-page__container
                    div.main-page__logo(style=`background-image: url(/uploads/로고.png)`)
                    div.main-page__sub-title 참 삶의 배움터
                    div.main-page__title 경제연구회
                    div.scroll-down
