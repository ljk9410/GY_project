extends ../base

// 추후 javascript를 이용해서 기능 구현하기
block content 
    span=story.fileUrl
    form(method="POST")
        input(type="file" value=`/${story.fileUrl}` multiple)
        input(type="text" value=story.title name="title")
        textarea(name="desc") #{story.desc}
        input(type="submit" value="Submit")